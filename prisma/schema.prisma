generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



model Category {
  id        String   @id @default(cuid())
  name      String   @unique
  blog     Blog[]    
}

model Writer {
  id       String  @id @default(cuid())
  name     String
  email    String  @unique
  bio      String?
  avatar   String?
  createdAt DateTime @default(now())

  blogs    Blog[]  
}

model Blog {
  id          String     @id @default(cuid())
  postname    String
  content     String
  excerpt     String? 
  image       String?  
  imageOrig   String?  
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  userId      String
  writer      Writer     @relation(fields: [userId], references: [id])

  categories  Category[] 
}



model ContactMessage {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?    // Optional
  service   String?    // Optional (e.g., solar-installation)
  subject   String?    // Optional (can be blank)
  message   String
  createdAt DateTime @default(now())
}



